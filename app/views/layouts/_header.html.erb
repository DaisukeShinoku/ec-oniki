<header class="blog-header py-3" style="background-color: #eae6e4;">
  <div class="container">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <%= link_to 'ONK SHOPPING', root_path, class: "text-muted" %>
      </div>
      <div class="col-8 d-flex justify-content-end align-items-center">
        <% if logged_in? %>
          <%= link_to 'ログアウト', logout_path, method: :delete, class: 'btn btn-sm btn-secondary' %>
          <a class="btn btn-sm btn-outline-secondary" href="#">カート</a>
        <% else %>
          <%= link_to 'ユーザー登録', signup_path, class: 'btn btn-sm btn-secondary' %>
          <%= link_to 'ログイン', login_path, class: 'btn btn-sm btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</header>

<div class="nav-scroller py-1 mb-2" style="background-color: #eae6e4;">
<div class="container">
  <nav class="nav d-flex justify-content-between">
    <a class="p-2 text-muted justify-content-start">
      <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
    </a>
    <%= link_to '商品一覧', products_path, class: "p-2 text-muted justify-content-end" %>
  </nav>
</div>
</div>