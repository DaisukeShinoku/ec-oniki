    <div class="container">
        <div class="login-header">
           <div class="row">
                    <h1>ログイン</h1>
            </div>
        </div>
    </div>

    <hr class="login-border">

    <br>
    <br>

    <div class="container">

    <%= render 'layouts/flash' %>
    
      <div class="row justify-content-md-center">
        
            <div class="col-10">
              <%= form_for(:session, url: login_path) do |f| %>


                <div class="form-group">
                    <label for="email"><span class="badge badge-danger">必須</span> メールアドレス</label>
                    <%= f.email_field :email, class: "form-control " %>
                </div>
                <div class="form-group">
                    <label for="password"><span class="badge badge-danger">必須</span> パスワード</label>
                    <%= f.password_field :password, class: "form-control " %>
                </div>

                <div class="form-group">
                  <%= f.label :remember_me, class: "checkbox" do %>
                  <p><%= f.check_box :remember_me %>次回から自動でログインする</p>
                  <% end %>
                </div>
                
                <%= f.submit "ログインする" , class: "btn btn-primary"  %>
              <% end %>
            </div>
      </div>
    </div>

<hr class="login-border">

<br>
<br>

    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-12">
          <h1 class="text-center guest-login">お試しログイン</h1>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col text-center">
          <%= link_to 'ゲストユーザーでログイン', user_guest_path, method: :post, class: "btn btn-success btn-lg" %>
        </div>
        <div class="col text-center">
          <%= link_to 'ゲスト管理者でログイン', admin_guest_path, method: :post, class: "btn btn-danger btn-lg" %>
        </div>
      </div>
    </div>

    <br>
    <br>

    <hr class="login-border">
