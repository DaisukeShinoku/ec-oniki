    <div class="container">
        <div class="signup-header">
           <div class="row">
                    <h1>管理者権限で会員情報を操作中</h1>
            </div>
        </div>
    </div>

    <hr class="signup-border">
    
    <div class="container">

    <%= render 'layouts/flash' %>
    
      <div class="row justify-content-md-center">
        
            <div class="col-10">
              <%= form_for(@user, url:admin_user_path, method: :patch) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>
                <div class="form-group">
                    <label for="account_id"><span class="badge badge-danger">必須</span> 会員ID</label>
                    <%= f.text_field :account_id, class: "form-control ", placeholder: "半角英数字6文字以上15字以内" %>
                </div>
                <div class="form-group">
                    <label for="email"><span class="badge badge-danger">必須</span> メールアドレス</label>
                    <%= f.email_field :email, class: "form-control ", placeholder: "例：raffaello@jungleocean.com" %>
                </div>
                <div class="form-group">
                    <label for="password"><span class="badge badge-danger">必須</span> パスワード</label>
                    <%= f.password_field :password, class: "form-control ", placeholder: "半角英数字6文字以上" %>
                </div>
                <div class="form-group">
                    <label for="password_confirmation"><span class="badge badge-danger">必須</span> パスワード(確認用)</label>
                    <%= f.password_field :password_confirmation, class: "form-control ", placeholder: "同じパスワードを再度入力してください" %>
                </div>
                <div class="form-group">
                    <label for="birthday"><span class="badge badge-danger">必須</span> 生年月日</label>
                    <%= f.date_field :birthday, class: "form-control ", placeholder: "例：1992/03/26", max: "9999-12-31" %>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                        <label for="last_name"><span class="badge badge-danger">必須</span> 姓</label>
                        <%= f.text_field :last_name, class: "form-control ", placeholder: "例:山田" %>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-group">
                        <label for="first_name"><span class="badge badge-danger">必須</span> 名</label>
                        <%= f.text_field :first_name, class: "form-control ", placeholder: "例:太郎" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                        <label for="last_name_kana"><span class="badge badge-danger">必須</span> セイ(フリガナ)</label>
                        <%= f.text_field :last_name_kana, class: "form-control ", placeholder: "例:ヤマダ" %>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-group">
                        <label for="first_name_kana"><span class="badge badge-danger">必須</span> メイ(フリガナ)</label>
                        <%= f.text_field :first_name_kana, class: "form-control ", placeholder: "例:タロウ" %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                        <label for="last_name_roman"><span class="badge badge-danger">必須</span> SEI(ローマ字)</label>
                        <%= f.text_field :last_name_roman, class: "form-control ", placeholder: "例:YAMADA" %>
                    </div>
                  </div>
                  <div class="col">
                    <div class="form-group">
                        <label for="first_name_roman"><span class="badge badge-danger">必須</span> MEI(ローマ字)</label>
                        <%= f.text_field :first_name_roman, class: "form-control ", placeholder: "例:TARO" %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                    <label for="postcode"><span class="badge badge-danger">必須</span> 郵便番号</label>
                    <%= f.text_field :postcode, class: "form-control ", placeholder: "例:1638001(-:ハイフン は不要です)" %>
                </div>
                <div class="form-group">
                    <label for="prefecture_code"><span class="badge badge-danger">必須</span> 都道府県</label>
                    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name ,include_blank: '都道府県' %>
                </div>
                <div class="form-group">
                    <label for="address_city"><span class="badge badge-danger">必須</span> 住所(市町村区)</label>
                    <%= f.text_field :address_city, class: "form-control ", placeholder: "例:新宿区" %>
                </div>
                <div class="form-group">
                    <label for="address_street"><span class="badge badge-danger">必須</span> 住所(番地)</label>
                    <%= f.text_field :address_street, class: "form-control ", placeholder: "例:西新宿2-8-1" %>
                </div>
                <div class="form-group">
                    <label for="address_building"><span class="badge badge-primary">任意</span> 住所(ビル名・部屋番号)</label>
                    <%= f.text_field :address_building, class: "form-control ", placeholder: "例:都庁アパート302号室" %>
                </div>

                <div class="form-group">
                    <label for="nickname"><span class="badge badge-primary">任意</span> ニックネーム</label>
                    <%= f.text_field :nickname, class: "form-control ", placeholder: "全角で１０文字以内" %>
                </div>

                <div class="form-group">
                  <label for="is_valid"><span class="badge badge-primary">必須</span> 会員ステータス </label>
                  <%= f.radio_button :is_valid, true %>
                  <%= f.label :is_valid, "有効会員", value: true %>
                  <%= f.radio_button :is_valid, false %>
                  <%= f.label :is_valid, "退会済み", value: false %>
                </div>
                
                <span><%= f.submit "管理者権限で更新" , class: "btn btn-primary"  %></span>
                <span><%= link_to '会員詳細に戻る', admin_user_path(@user), class: 'btn btn-secondary' %></span>
              <% end %>
            </div>
      </div>
    </div>

    <hr class="signup-border">