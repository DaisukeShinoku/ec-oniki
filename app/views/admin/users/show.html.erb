    <div class="container">
        <div class="mypage-header">
           <div class="row">
              <h1><%= @user.fullname %>さんの登録情報</h1>
            </div>
        </div>
    </div>

<br>

<hr class="mypage-border">

<br>

<div class="container">

  <%= render 'layouts/flash' %>

    <div class="row profile-box">
      <table class="table">
        <tr>
          <td>会員ID</td>
          <td><%= @user.account_id %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.fullname %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @user.fulladdress %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_valid == true %>
              <h5><span class="badge badge-primary">有効会員</span></h5>
            <% else %>
              <h5><span class="badge badge-danger">退会済み</span></h5>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

  <br>

  <div class='row'>
    <div class="col">
      <%= link_to '管理者権限で登録情報を編集する', edit_admin_user_path(@user.id), class: 'btn btn-success' %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col">
      <%= link_to '注文履歴一覧', admin_orders_path(user_id: @user.id), class: 'btn btn-info' %>
    </div>
    <div class="col text-right">
      <%= link_to '会員情報一覧に戻る', admin_users_path, class: 'btn btn-secondary' %>
    </div>
  </div>

</div>

<br>
<br>
<br>

<hr class="mypage-border">

<br>
