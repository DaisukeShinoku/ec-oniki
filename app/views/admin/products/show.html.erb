<div class="container">

<%= render 'layouts/flash' %>

  <div class="row">
    <div class="col-3">
      <%= render 'shared/admin_sidebar', {categories: @categories, areas: @areas} %>
    </div>
    <div class="col-9">
      <div class="row">
        <div class="col-8">
          <figure class="image">
            <% if @product.image? %>
              <%= image_tag @product.image.url, class: "top-image" %><br>
            <% else %>
              <%= image_tag 'noimage.jpg', class: "top-image" %><br>
            <% end %>
          </figure>
        </div>
        <div class="col-4">
          <h4><span class="badge badge-danger"><%= @product.category.name %></span>
          <span class="badge badge-danger"><%= @product.area.name %></span></h4>
          <h2> <%= @product.name %> </h2>
          <br>
          <h6> <%= @product.introduction %> </h6>
          <br>
          <div><h3><%= number_to_currency(@product.price_tax, :format => "%u%n", :unit => "￥", :precision => 0) %><span class="h6">(税込)</span></h3></div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <span><%= link_to '管理者権限で登録情報を編集する', edit_admin_product_path(@product.id), class: 'btn btn-primary' %></span>
          <span><%= link_to '商品一覧に戻る', admin_products_path, class: 'btn btn-secondary' %></span>
        </div>
      </div>
    </div>
  </div>
</div>