    <div class="container">
        <div class="signup-header">
           <div class="row">
              <h1>商品情報の更新</h1>
            </div>
        </div>
    </div>

    <hr class="signup-border">
    
    <div class="container">

    <%= render 'layouts/flash' %>
    
      <div class="row justify-content-md-center">
        
            <div class="col-10">
              <%= form_for @product, url: admin_product_path, method: :patch do |f| %>

                <div class="form-group">
                    <label for="category_id"><span class="badge badge-danger">必須</span> カテゴリー選択</label>
                    <%= f.collection_select :category_id, Category.all, :id, :name %>
                </div>
                <div class="form-group">
                    <label for="area_id"><span class="badge badge-danger">必須</span> エリア選択</label>
                    <%= f.collection_select :area_id, Area.all, :id, :name %>
                </div>
                <div class="form-group">
                    <label for="name"><span class="badge badge-danger">必須</span> 商品名</label>
                    <%= f.text_field :name, class: "form-control ", placeholder: "30文字以内でご入力ください" %>
                </div>
                <div class="form-group">
                    <label for="password"><span class="badge badge-danger">必須</span> 税抜価格</label>
                    <%= f.number_field :price, min:1, class: "form-control " %>
                </div>
                <div class="form-group">
                    <label for="introduction"><span class="badge badge-primary">任意</span> 商品説明</label>
                    <%= f.text_area :introduction, class: "form-control ", placeholder: "140文字以内でご記入ください" %>
                </div>
                <div class="form-group">
                    <label for="is_valid"><span class="badge badge-danger">必須</span> 販売ステータス</label><br>
                      販売中 <%= f.radio_button :is_valid, true %><br>
                      売り切れ <%= f.radio_button :is_valid, false %> 
                </div>
                
                <div class="form-group">
                    <label for="introduction"><span class="badge badge-primary">任意</span> 画像を登録する</label>
                    <%= f.file_field :image, class: "form-control " %>
                    <%= f.hidden_field :image_cache %>
                </div>

                <%= f.submit "商品を登録する" , class: "btn btn-primary"  %>
              <% end %>
            </div>
      </div>
    </div>

    <hr class="signup-border">